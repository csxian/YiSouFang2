<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="5dp"
    app:elevation="1dp">

    <LinearLayout
        android:id="@+id/house_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/houseImage"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/houseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingTop="8dp"
                android:paddingLeft="5dp"
                android:text="中怡城市花园"
                android:textColor="@color/black"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/houseContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingTop="8dp"
                android:paddingLeft="5dp"
                android:text="2室2厅 / 116平方米 / 北"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/housePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingLeft="5dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:text="265万"
                    android:textColor="@color/red"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/houseUnitPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingLeft="5dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:text="16460元/平"
                    android:textSize="17sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingLeft="5dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textColor="@color/blue"
                    android:text="二手房"
                    android:textSize="17sp"/>



            </LinearLayout>




        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>